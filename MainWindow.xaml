<Window x:Class="prevent_keypress_from_water.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prevent_keypress_from_water"
        mc:Ignorable="d"
        Title="键盘监控" Height="600" Width="1200" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="KeyboardButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#AAAAAA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SpecialKeyStyle" TargetType="Button" BasedOn="{StaticResource KeyboardButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
        </Style>
        <Style x:Key="FunctionKeyStyle" TargetType="Button" BasedOn="{StaticResource KeyboardButtonStyle}">
            <Setter Property="Background" Value="#D8E6F2"/>
            <Setter Property="MinHeight" Value="30"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="键盘监控" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="10" Padding="20" Background="#F8F8F8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/> <!-- 功能键区域 -->
                    <RowDefinition Height="10"/> <!-- 间隔 -->
                    <RowDefinition Height="Auto"/> <!-- 主键盘区域 -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/> <!-- 主键盘区域 -->
                    <ColumnDefinition Width="20"/> <!-- 间隔 -->
                    <ColumnDefinition Width="Auto"/> <!-- 方向键和编辑键区域 -->
                    <ColumnDefinition Width="20"/> <!-- 间隔 -->
                    <ColumnDefinition Width="Auto"/> <!-- 数字键盘区域 -->
                </Grid.ColumnDefinitions>
                
                <!-- 功能键区域 (F1-F12) -->
                <UniformGrid Grid.Row="0" Rows="1" Columns="13">
                    <Button Content="Esc" Style="{StaticResource SpecialKeyStyle}"/>
                    <Button Content="F1" Style="{StaticResource FunctionKeyStyle}"/>
                    <Button Content="F2" Style="{StaticResource FunctionKeyStyle}"/>
                    <Button Content="F3" Style="{StaticResource FunctionKeyStyle}"/>
                    <Button Content="F4" Style="{StaticResource FunctionKeyStyle}"/>
                    <Button Content="F5" Style="{StaticResource FunctionKeyStyle}"/>
                    <Button Content="F6" Style="{StaticResource FunctionKeyStyle}"/>
                    <Button Content="F7" Style="{StaticResource FunctionKeyStyle}"/>
                    <Button Content="F8" Style="{StaticResource FunctionKeyStyle}"/>
                    <Button Content="F9" Style="{StaticResource FunctionKeyStyle}"/>
                    <Button Content="F10" Style="{StaticResource FunctionKeyStyle}"/>
                    <Button Content="F11" Style="{StaticResource FunctionKeyStyle}"/>
                    <Button Content="F12" Style="{StaticResource FunctionKeyStyle}"/>
                </UniformGrid>
                
                <!-- 方向键和编辑键区域 -->
                <UniformGrid Grid.Row="0" Grid.Column="2" Rows="1" Columns="3">
                    <Button Content="PrtSc" Style="{StaticResource SpecialKeyStyle}"/>
                    <Button Content="ScrLk" Style="{StaticResource SpecialKeyStyle}"/>
                    <Button Content="Pause" Style="{StaticResource SpecialKeyStyle}"/>
                </UniformGrid>
                <Grid Grid.Row="2" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <!-- 间隔 -->
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <UniformGrid Grid.Row="0" Grid.Column="0" Rows="2" Columns="3">
                        <Button Content="Insert" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="Home" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="PgUp" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="Delete" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="End" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="PgDn" Style="{StaticResource SpecialKeyStyle}"/>
                    </UniformGrid>

                    <UniformGrid Grid.Row="1" Grid.Column="0" Rows="1" Columns="3">
                        <Button Style="{StaticResource KeyboardButtonStyle}" Opacity="0"/>
                    </UniformGrid>

                    <!-- 方向键区域 -->
                    <Grid Grid.Row="2" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="1" Content="↑" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Grid.Row="1" Grid.Column="0" Content="←" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Grid.Row="1" Grid.Column="1" Content="↓" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="→" Style="{StaticResource SpecialKeyStyle}"/>
                    </Grid>
                </Grid>
                
                <!-- 主键盘区域 -->
                <Grid Grid.Row="2" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 第一行: 数字键 -->
                    <UniformGrid Grid.Row="0" Rows="1">
                        <Button Content="`" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="1" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="2" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="3" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="4" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="5" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="6" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="7" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="8" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="9" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="0" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="-" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="=" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="Backspace" Style="{StaticResource SpecialKeyStyle}"/>
                    </UniformGrid>
                    
                    <!-- 第二行: QWERTY -->
                    <UniformGrid Grid.Row="1" Rows="1">
                        <Button Content="Tab" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="Q" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="W" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="E" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="R" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="T" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="Y" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="U" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="I" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="O" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="P" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="[" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="]" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="\" Style="{StaticResource KeyboardButtonStyle}"/>
                    </UniformGrid>
                    
                    <!-- 第三行: ASDFG -->
                    <UniformGrid Grid.Row="2" Rows="1">
                        <Button Content="Caps Lock" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="A" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="S" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="D" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="F" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="G" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="H" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="J" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="K" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="L" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content=";" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="'" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="Enter" Style="{StaticResource SpecialKeyStyle}"/>
                    </UniformGrid>
                    
                    <!-- 第四行: ZXCVB -->
                    <UniformGrid Grid.Row="3" Rows="1">
                        <Button Content="Shift" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="Z" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="X" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="C" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="V" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="B" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="N" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="M" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="," Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="." Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="/" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="Shift" Style="{StaticResource SpecialKeyStyle}"/>
                    </UniformGrid>
                    
                    <!-- 第五行: 控制键 -->
                    <UniformGrid Grid.Row="4" Rows="1">
                        <Button Content="Ctrl" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="Win" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="Alt" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="Space" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="Alt" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="Win" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="Menu" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="Ctrl" Style="{StaticResource SpecialKeyStyle}"/>
                    </UniformGrid>
                </Grid>

                <!-- 数字键和编辑键区域 -->
                <UniformGrid Grid.Row="0" Grid.Column="4" Rows="1" Columns="4">
                    <Button Content="Custom" Style="{StaticResource SpecialKeyStyle}"/>
                    <Button Content="Custom" Style="{StaticResource SpecialKeyStyle}"/>
                    <Button Content="Custom" Style="{StaticResource SpecialKeyStyle}"/>
                    <Button Content="Custom" Style="{StaticResource SpecialKeyStyle}"/>
                </UniformGrid>
                <Grid Grid.Row="2" Grid.Column="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!-- 数字键盘第一行 -->
                    <UniformGrid Grid.Row="0" Rows="1" Columns="4">
                        <Button Content="Num Lock" Style="{StaticResource SpecialKeyStyle}"/>
                        <Button Content="/" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="*" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Content="-" Style="{StaticResource KeyboardButtonStyle}"/>
                    </UniformGrid>

                    <!-- 数字键盘第二、三行 -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="0" Content="7" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="8" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="9" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Grid.Row="0" Grid.Column="3" Content="+" Style="{StaticResource KeyboardButtonStyle}" Grid.RowSpan="2"/>

                        <Button Grid.Row="1" Grid.Column="0" Content="4" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Grid.Row="1" Grid.Column="1" Content="5" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="6" Style="{StaticResource KeyboardButtonStyle}"/>
                    </Grid>

                    <!-- 数字键盘第四、五行 -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Content="1" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="2" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="3" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Grid.Row="0" Grid.Column="3" Grid.RowSpan="2" Content="Enter" Style="{StaticResource SpecialKeyStyle}"/>

                        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="0" Style="{StaticResource KeyboardButtonStyle}"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="." Style="{StaticResource KeyboardButtonStyle}"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
