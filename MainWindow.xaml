<Window x:Class="prevent_keypress_from_water.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prevent_keypress_from_water"
        mc:Ignorable="d"
        Title="Prevent Keypress from Water" Height="600" Width="1200" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="KeyboardButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#AAAAAA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Tag" Value="{Binding RelativeSource={RelativeSource Self}, Path=Key}"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SpecialKeyStyle" TargetType="Button" BasedOn="{StaticResource KeyboardButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
        </Style>
        <Style x:Key="FunctionKeyStyle" TargetType="Button" BasedOn="{StaticResource KeyboardButtonStyle}">
            <Setter Property="Background" Value="#D8E6F2"/>
            <Setter Property="MinHeight" Value="30"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Prevent Keypress from Water" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="10" Padding="20" Background="#F8F8F8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/> <!-- 功能键区域 -->
                    <RowDefinition Height="10"/> <!-- 间隔 -->
                    <RowDefinition Height="Auto"/> <!-- 主键盘区域 -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/> <!-- 主键盘区域 -->
                    <ColumnDefinition Width="20"/> <!-- 间隔 -->
                    <ColumnDefinition Width="Auto"/> <!-- 方向键和编辑键区域 -->
                    <ColumnDefinition Width="20"/> <!-- 间隔 -->
                    <ColumnDefinition Width="Auto"/> <!-- 数字键盘区域 -->
                </Grid.ColumnDefinitions>
                
                <!-- 功能键区域 (F1-F12) -->
                <UniformGrid Grid.Row="0" Rows="1" Columns="13">
                    <Button Content="Esc" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="13"/>
                    <Button Content="F1" Style="{StaticResource FunctionKeyStyle}" Click="Button_Click" Tag="90"/>
                    <Button Content="F2" Style="{StaticResource FunctionKeyStyle}" Click="Button_Click" Tag="91"/>
                    <Button Content="F3" Style="{StaticResource FunctionKeyStyle}" Click="Button_Click" Tag="92"/>
                    <Button Content="F4" Style="{StaticResource FunctionKeyStyle}" Click="Button_Click" Tag="93"/>
                    <Button Content="F5" Style="{StaticResource FunctionKeyStyle}" Click="Button_Click" Tag="94"/>
                    <Button Content="F6" Style="{StaticResource FunctionKeyStyle}" Click="Button_Click" Tag="95"/>
                    <Button Content="F7" Style="{StaticResource FunctionKeyStyle}" Click="Button_Click" Tag="96"/>
                    <Button Content="F8" Style="{StaticResource FunctionKeyStyle}" Click="Button_Click" Tag="97"/>
                    <Button Content="F9" Style="{StaticResource FunctionKeyStyle}" Click="Button_Click" Tag="98"/>
                    <Button Content="F10" Style="{StaticResource FunctionKeyStyle}" Click="Button_Click" Tag="99"/>
                    <Button Content="F11" Style="{StaticResource FunctionKeyStyle}" Click="Button_Click" Tag="100"/>
                    <Button Content="F12" Style="{StaticResource FunctionKeyStyle}" Click="Button_Click" Tag="101"/>
                </UniformGrid>
                
                <!-- 方向键和编辑键区域 -->
                <UniformGrid Grid.Row="0" Grid.Column="2" Rows="1" Columns="3">
                    <Button Content="PrtSc" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="30"/>
                    <Button Content="ScrLk" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="115"/>
                    <Button Content="Pause" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="7"/>
                </UniformGrid>
                <Grid Grid.Row="2" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <!-- 间隔 -->
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <UniformGrid Grid.Row="0" Grid.Column="0" Rows="2" Columns="3">
                        <Button Content="Insert" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="31"/>
                        <Button Content="Home" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="22"/>
                        <Button Content="PgUp" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="19"/>
                        <Button Content="Delete" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="32"/>
                        <Button Content="End" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="21"/>
                        <Button Content="PgDn" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="20"/>
                    </UniformGrid>

                    <UniformGrid Grid.Row="1" Grid.Column="0" Rows="1" Columns="3">
                        <Button Style="{StaticResource KeyboardButtonStyle}" Opacity="0" Click="Button_Click"/>
                    </UniformGrid>

                    <!-- 方向键区域 -->
                    <Grid Grid.Row="2" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="1" Content="↑" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="24"/>
                        <Button Grid.Row="1" Grid.Column="0" Content="←" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="23"/>
                        <Button Grid.Row="1" Grid.Column="1" Content="↓" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="26"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="→" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="25"/>
                    </Grid>
                </Grid>
                
                <!-- 主键盘区域 -->
                <Grid Grid.Row="2" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 第一行: 数字键 -->
                    <UniformGrid Grid.Row="0" Rows="1">
                        <Button Content="`" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="146"/>
                        <Button Content="1" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="35"/>
                        <Button Content="2" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="36"/>
                        <Button Content="3" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="37"/>
                        <Button Content="4" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="38"/>
                        <Button Content="5" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="39"/>
                        <Button Content="6" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="40"/>
                        <Button Content="7" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="41"/>
                        <Button Content="8" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="42"/>
                        <Button Content="9" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="43"/>
                        <Button Content="0" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="34"/>
                        <Button Content="-" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="143"/>
                        <Button Content="=" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="141"/>
                        <Button Content="Backspace" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="2"/>
                    </UniformGrid>
                    
                    <!-- 第二行: QWERTY -->
                    <UniformGrid Grid.Row="1" Rows="1">
                        <Button Content="Tab" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="3"/>
                        <Button Content="Q" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="60"/>
                        <Button Content="W" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="66"/>
                        <Button Content="E" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="48"/>
                        <Button Content="R" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="61"/>
                        <Button Content="T" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="63"/>
                        <Button Content="Y" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="68"/>
                        <Button Content="U" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="64"/>
                        <Button Content="I" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="52"/>
                        <Button Content="O" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="58"/>
                        <Button Content="P" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="59"/>
                        <Button Content="[" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="149"/>
                        <Button Content="]" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="151"/>
                        <Button Content="\" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="150"/>
                    </UniformGrid>
                    
                    <!-- 第三行: ASDFG -->
                    <UniformGrid Grid.Row="2" Rows="1">
                        <Button Content="Caps Lock" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="8"/>
                        <Button Content="A" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="44"/>
                        <Button Content="S" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="62"/>
                        <Button Content="D" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="47"/>
                        <Button Content="F" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="49"/>
                        <Button Content="G" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="50"/>
                        <Button Content="H" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="51"/>
                        <Button Content="J" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="53"/>
                        <Button Content="K" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="54"/>
                        <Button Content="L" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="55"/>
                        <Button Content=";" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="140"/>
                        <Button Content="'" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="152"/>
                        <Button Content="Enter" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="6"/>
                    </UniformGrid>
                    
                    <!-- 第四行: ZXCVB -->
                    <UniformGrid Grid.Row="3" Rows="1">
                        <Button Content="Shift" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="116"/>
                        <Button Content="Z" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="69"/>
                        <Button Content="X" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="67"/>
                        <Button Content="C" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="46"/>
                        <Button Content="V" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="65"/>
                        <Button Content="B" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="45"/>
                        <Button Content="N" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="57"/>
                        <Button Content="M" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="56"/>
                        <Button Content="," Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="142"/>
                        <Button Content="." Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="144"/>
                        <Button Content="/" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="145"/>
                        <Button Content="Shift" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="117"/>
                    </UniformGrid>
                    
                    <!-- 第五行: 控制键 -->
                    <UniformGrid Grid.Row="4" Rows="1">
                        <Button Content="Ctrl" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="118"/>
                        <Button Content="Win" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="70"/>
                        <Button Content="Alt" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="120"/>
                        <Button Content="Space" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="18"/>
                        <Button Content="Alt" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="121"/>
                        <Button Content="Win" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="72"/>
                        <Button Content="Menu" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="119"/>
                        <Button Content="Ctrl" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="119"/>
                    </UniformGrid>
                </Grid>

                <!-- 数字键和编辑键区域 -->
                <UniformGrid Grid.Row="0" Grid.Column="4" Rows="1" Columns="4">
                    <Button Content="Custom" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click"/>
                    <Button Content="Custom" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click"/>
                    <Button Content="Custom" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click"/>
                    <Button Content="Custom" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click"/>
                </UniformGrid>
                <Grid Grid.Row="2" Grid.Column="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!-- 数字键盘第一行 -->
                    <UniformGrid Grid.Row="0" Rows="1" Columns="4">
                        <Button Content="Num Lock" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="114"/>
                        <Button Content="/" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="89"/>
                        <Button Content="*" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="84"/>
                        <Button Content="-" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="87"/>
                    </UniformGrid>

                    <!-- 数字键盘第二、三行 -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="0" Content="7" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="81"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="8" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="82"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="9" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="83"/>
                        <Button Grid.Row="0" Grid.Column="3" Content="+" Style="{StaticResource KeyboardButtonStyle}" Grid.RowSpan="2" Click="Button_Click" Tag="85"/>

                        <Button Grid.Row="1" Grid.Column="0" Content="4" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="78"/>
                        <Button Grid.Row="1" Grid.Column="1" Content="5" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="79"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="6" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="80"/>
                    </Grid>

                    <!-- 数字键盘第四、五行 -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Content="1" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="75"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="2" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="76"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="3" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="77"/>
                        <Button Grid.Row="0" Grid.Column="3" Grid.RowSpan="2" Content="Enter" Style="{StaticResource SpecialKeyStyle}" Click="Button_Click" Tag="6"/>

                        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="0" Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="74"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="." Style="{StaticResource KeyboardButtonStyle}" Click="Button_Click" Tag="88"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2">
            <TextBlock Text="{Binding BlockedKeyInfo}" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
